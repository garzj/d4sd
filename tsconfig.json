{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./typings"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*", "*"]
    }
  },
  "exclude": ["./node_modules", "./lib"],
  "include": ["./src"]
}
